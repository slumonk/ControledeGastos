<Manager>:
	Home:
		name: 'home'
		id: home

	Objetivos:
		name: 'objetivos'
		id: objetivo
	
	Historico:
		name: 'historico'
		id: historico

<Titulo@Label>:
	canvas.before:
		Color:
			rgba: (.94, .88, .78, 1)
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: None
	height: '60dp'
	font_size: '30sp'
	bold: True
	color: (0, 0, 0, 1)

<BotoesMenu@BoxLayout>:
	size_hint_y: None
	height: '70dp'
	Button:
		text: 'Objetivos'
		on_release: app.root.current = 'objetivos'
	Button:
		text: 'Home'
		on_release: app.root.current = 'home'
	Button: 
		text: 'historico'
		on_release: app.root.current = 'historico'

<Rodape>:
	size_hint_y: None
	height: '40dp'
	Label:
		text: 'Usuário: '
	Label:
		id: horario

	Label:
		id: datahoje

<Home>:
	BoxLayout:
		orientation: 'vertical'
		Titulo:
			text: 'CONTROLE DE GASTOS'
		BotoesMenu:
		GridLayout:
			cols: 3
			size_hint_y: None
			height: '70'
			Label:
				text: 'Entrada:'
			Label:
				id: entrada
				text: '0,00'
			Button:
				text: 'Alterar'
				on_release: root.alteraEntrada()
			Label:
				text: 'Gastos'
			Label:
				id: gastos
				text: '0,00'
			Button:
				text: 'Alterar'
				on_release: root.alteraGastos()

		BoxLayout:

		Rodape:

<Objetivos>:
	BoxLayout:
		orientation: 'vertical'
		Titulo:
			text: "Objetivos"
		BotoesMenu:
		BoxLayout:

		Rodape:

<Historico>:
	BoxLayout:
		orientation: 'vertical'
		Titulo:
			text: 'Movimentações'
		
		BotoesMenu:
		BoxLayout:

		Rodape:

<LbPerson@Label>:
	canvas:
		Color:
			rgba: (1, 1, 1, 0)

<BoxPerson@BoxLayout>:
	
